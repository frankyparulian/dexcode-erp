<div class="container">
  <h2>New Project</h2>

  <%= form_for [@project], html: { class: 'form-horizontal default-form' } do |f|  %>

    <fieldset>
      <legend>Project</legend>
      <%= f.hidden_field :client_id, value: params[:client_id] %>
      <div class="form-group">
      <%= f.label :client_id, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <select id="project_client_id" name="project[client_id]" class = "m-select">
            <% @clients.each do |client|%>
              <option value="<%= client.id%>"><%= client.name%></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: 'Project Name', required: true, autofocus: true %>
      </div>
    </div>
    </fieldset>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit 'Save', class: 'button button-default' %>
        <% if @project.persisted? %>
          <%= link_to "Delete Project", project_url, method: :delete, class: 'button button-default' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>