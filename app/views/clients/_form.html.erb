<%= form_for @client, html: { class: 'form-horizontal default-form' } do |f| %>
  <fieldset>
    <legend>Client Info</legend>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: 'Name Client', autofocus: true, required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, placeholder: 'Email Client', autofocus: true, required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :code, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :code, placeholder: 'Client Code', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :start, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :start_date, placeholder: 'Start Date', required: true, :class => 'jquery-datepicker' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :end, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :end_date, placeholder: 'End Date', :class => 'jquery-datepicker'%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :billing_address, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :billing_address, placeholder: 'Billing Address', class: 'billing-address' %>
      </div>
    </div>
  </fieldset>

  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit 'Save', class: 'button button-default' %>
      <% if @client.persisted? %>
        <%= link_to "Delete Client", client_path, method: :delete, class: 'button button-default' %>
      <% end %>
    </div>
  </div>
<% end %>
