<%= form_for @google, url: system_settings_path, method: :post, html: { class: 'form-horizontal default-form', multipart: true, :"ng-controller" => "EmployeeFormController",
  :"ng-init" => "init(#{@google.id})"} do |f| %>
  <fieldset>
    <legend>Setting Google Drive</legend>
    <% f.text_field :id%>
    <div class="form-group">
      <%= f.label :redirect_uri, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :redirect_uri,value: (google_apis_url<<'/'), placeholder: 'Redirect Uri', required: true, readonly: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :client_id, 'Client ID', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10" >
        <%= f.text_area :client_id, placeholder: 'Name', autofocus: true, required: true, style: 'width:100%' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :client_secret, 'Client Secret', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :client_secret, placeholder: 'Client Secret', required: true, style: 'width:100%' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :access_token, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10" style="padding-top:9px">
        <%= @google.access_token%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :refresh_token, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10" style="padding-top:9px">
        <%= @google.refresh_token%>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary pull-right" id = "btn-token" style="margin-right: 45px">Save and Get Token</button>
    </div>
  </fieldset>
<% end %>
