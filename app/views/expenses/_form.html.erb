<%= form_for @expense, html: { class: 'form-horizontal default-form' } do |f| %>
  <fieldset>
    <legend>Expense Info</legend>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: 'Name Expense', autofocus: true, required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :total, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :total, placeholder: 'Total', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :date, placeholder: 'Date', :class => 'jquery-datepicker' %>
      </div>
    </div>
  </fieldset>

  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit 'Save', class: 'button button-default' %>
      <% if@expense.persisted? %>
        <%= link_to "Delete Expense", expense_path, method: :delete, class: 'button button-default' %>
      <% end %>
    </div>
  </div>
<% end %>
