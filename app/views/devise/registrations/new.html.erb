<div class="form-container">
<div class="login-form">
  <div class="title">Sign up</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Email' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password' %>
    </div>

    <div class="form-group">
      <%= f.hidden_field :code, value: params[:code]%>
    </div>


    <%= f.submit "Sign up", class: 'button button-primary' %>
  <% end %>
</div>

<div class="login-form-append">
  Already have an account? <%= link_to 'Sign in', new_session_path(resource_name) %>
</div>
</div>
